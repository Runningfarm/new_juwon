<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_tab4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF6"
    android:fitsSystemWindows="true">

    <!-- 콘텐츠 영역 -->
    <LinearLayout
        android:id="@+id/contentWrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/inventoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인벤토리"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5D7755"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"
            android:fontFamily="@font/nanumgothic_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD9C9"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabTextColor="#AAAAAA"
            app:tabSelectedTextColor="#5D7755"
            app:tabIndicatorColor="#5D7755"
            android:backgroundTint="#E6F4EA" />

        <!-- 농장 카테고리 ChipGroup -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/farmCategoryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_crop"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="농작물"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_decor"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장식물"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_collect"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채집"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_picnic"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피크닉"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_structure"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구조물"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />
            <!-- chip_fence(울타리) 제거됨 -->
        </com.google.android.material.chip.ChipGroup>

        <!-- 목장 카테고리 ChipGroup -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ranchCategoryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            app:singleSelection="true">

            <!-- 순서: 동물 → 사육 → 가구 → 구조물 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_animal"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동물"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_breeding"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사육"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ranch_furniture"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가구"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_ranch_structure"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구조물"
                android:textColor="#5D7755"
                app:chipBackgroundColor="@color/chip_selector" />

        </com.google.android.material.chip.ChipGroup>

        <!-- 집 카테고리 ChipGroup 삭제됨 -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="70dp"
            android:paddingBottom="16dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <!-- 하단 탭바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:padding="6dp"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_in"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 탭 버튼들 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tab1Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_home"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="홈"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tab2Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_running"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="러닝"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tab3Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_quest"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="퀘스트"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tab4Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_inventory"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="인벤토리"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tab6Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mypage"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="마이페이지"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
