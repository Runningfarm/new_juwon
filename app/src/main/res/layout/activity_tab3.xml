<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- padding 처리용 wrapper -->
    <FrameLayout
        android:id="@+id/contentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_above="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQuestTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="퀘스트"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="12dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#54FFFFFF"
                    android:orientation="vertical">

                    <!-- ===== 퀘스트CardView 블록들===== -->
                    <!-- 필요 시 아래CardView 블록들을 복붙하여 추가하세요 -->
                    <!-- 1번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <!-- 좌측: 보상 이미지 -->
                            <ImageView
                                android:id="@+id/imgReward1"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/coin" />
                            <!-- 중앙: 설명+ 진행바 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1km 러닝 완료"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest1"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <!-- 우측: 보상 받기 버튼 -->
                            <Button
                                android:id="@+id/btnClaim1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 2번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/imgReward2"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/coin" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3km 러닝 완료"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest2"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnClaim2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 3번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/imgReward3"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/coin" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5km 러닝 완료"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest3"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnClaim3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 4번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/imgReward4"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/trophy" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="오전 러닝 퀘스트"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest4"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnClaim4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 5번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/imgReward5"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/trophy" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="오후 러닝 퀘스트"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest5"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnClaim5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 6번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/imgReward6"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/trophy" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="야간 러닝 퀘스트"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest6"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnClaim6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 7번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/kcalQuest100"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/trophy" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100 칼로리 소모 퀘스트"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest7"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/btnClaim7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 8번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="372dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/kcalQuest200"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/trophy" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvQuestDesc8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="200 칼로리 소모 퀘스트"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ProgressBar
                                    android:id="@+id/progressQuest8"
                                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="8dp"
                                    android:max="100"
                                    android:progress="30" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/btnClaim8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:enabled="false"
                                android:text="보상받기" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- 9번 퀘스트 -->
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/kcalQuest400"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:contentDescription="보상 이미지"
                                android:src="@drawable/trophy" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tvQuestDesc9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="400 칼로리 소모 퀘스트"
                                    android:textColor="#333333"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                                <ProgressBar
                                    android:id="@+id/progressQuest9"
