<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF6"
    tools:context=".MainActivity">

    <!-- 종료 버튼 -->
    <ImageButton
        android:id="@+id/exitButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFDF6"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:scaleType="fitCenter"
        app:tint="#333333"
        android:contentDescription="종료 버튼"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 농장 영역 -->
    <FrameLayout
        android:id="@+id/farmArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFAF0"
        android:elevation="2dp"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/exitButton"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/characterButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_character"
            android:contentDescription="캐릭터 이미지" />

        <LinearLayout
            android:id="@+id/characterMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="12dp"
            android:background="#FFF9E6"
            android:padding="10dp"
            android:elevation="6dp"
            android:clipToPadding="false"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <ProgressBar
                    android:id="@+id/levelProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="120dp"
                    android:layout_height="12dp"
                    android:progress="40"
                    android:max="100"
                    android:progressTint="#FFB74D"
                    android:backgroundTint="#FFE0B2"
                    android:layout_marginEnd="8dp"
                    android:indeterminate="false" />

                <TextView
                    android:id="@+id/levelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LV 7"
                    android:textSize="14sp"
                    android:textColor="#6D4C41"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/foodCountText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="먹이: 3"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/feedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="먹이주기"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#FF9800"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- 상단 고정 버튼 컨테이너: farmArea 밖으로 뺌 -->
    <LinearLayout
        android:id="@+id/topControlsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="7dp"
        android:paddingRight="7dp"
        android:elevation="16dp"
        android:translationZ="16dp"
        app:layout_constraintTop_toBottomOf="@id/exitButton"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editModeButton"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="수정하기"
            android:textSize="10sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="#2E7D32"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_button_bg_green" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editCompleteButton"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="수정완료"
            android:textSize="10sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="#0277BD"
            android:layout_marginEnd="6dp"
            android:background="@drawable/rounded_button_bg_blue" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resetButton"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="초기화"
            android:textSize="10sp"
            android:textStyle="bold"
            android:padding="4dp"
            android:textColor="#C62828"
            android:background="@drawable/rounded_button_bg_yellow" />
    </LinearLayout>

    <!-- 하단 탭 바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:padding="6dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 탭 버튼 5개 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tab1Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_home"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="홈"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tab2Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_running"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="러닝"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tab3Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_quest"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="퀘스트"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tab4Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_inventory"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="인벤토리"
                android:elevation="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/tab6Button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mypage"
                android:background="@drawable/bottom_tab_selector"
                android:scaleType="centerInside"
                android:contentDescription="마이페이지"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
